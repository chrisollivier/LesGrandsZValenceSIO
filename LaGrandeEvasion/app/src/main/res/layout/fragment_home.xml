<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.6">

        <Button
            android:id="@+id/btnConnexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/instructionConnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Instructions"
            android:textSize="20dp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.2">

        <TextView
            android:id="@+id/NomClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom du patient"
            android:textSize="20dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/PrenomClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prenom du patient"
            android:textSize="20dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/AdresseDuClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse du patient"
            android:textSize="20dp"
            android:textStyle="italic|bold"/>

        <TextView
            android:id="@+id/TextViewAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="VÃ©rification du portail"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

</LinearLayout>